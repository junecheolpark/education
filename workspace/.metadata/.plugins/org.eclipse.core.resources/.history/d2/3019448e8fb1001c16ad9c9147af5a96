package Run;

import java.util.Scanner;

import DTO.AccountDTO;

public class Server {
	public static void main(String[] args) {
		AccountDTO[] actList = new AccountDTO[10];
		AccountDTO act2 = new AccountDTO();
		Scanner sc = new Scanner(System.in);
		AccountDTO dto = new AccountDTO("abc", "abc", "ABC초콜릿");
		int count = 0;
		actList[count++] = dto;
		System.out.println("접속하신걸 환영합니다.");
		System.out.println("==== 메뉴 선택 ====\r\n"
				+ "1. 로그인\r\n"
				+ "2. 회원가입\r\n"
				+ "3. 프로그램 종료");
		System.out.print(">> ");
		int menu = Integer.parseInt(sc.nextLine());
		while(true) {
			if (menu == 1) {
				
				
			}else if (menu == 2) {
				while(true) {
					System.out.print("ID :");
					String id =sc.nextLine();
					for(int i = 0; i< actList.length; i++) {
						if(actList[i].getId().equals(id)) {
							System.out.println("중복된 ID입니다"); 
						} break;
						
					}
					System.out.print("PW :");
					String pw =sc.nextLine();
					
					System.out.print("Nickname");
					String nickname =sc.nextLine();
					
					AccountDTO act = new AccountDTO(id, pw, nickname);
					actList[count++] = act;
				}
				
				
			
				
			}else if (menu == 3) {
				break;
			}
		}
		
		
	}



}
