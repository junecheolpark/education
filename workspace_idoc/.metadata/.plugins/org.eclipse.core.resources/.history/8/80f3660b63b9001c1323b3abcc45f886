package com.kh.cafe;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class CafeDAO {

	public int insert() throws Exception {
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String username = "kh";
		String password = "kh";
		try (Connection con = DriverManager.getConnection(url, username, password);
				Statement stmt = con.createStatement();) {
			String sql = "insert into cafe values(seq_cafe.nextval, '녹차', 8000, sysdate)";
			int rs = stmt.executeUpdate(sql);
			return rs;
		}
	}

	public int update() throws Exception {
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String username = "kh";
		String password = "kh";
		try (Connection con = DriverManager.getConnection(url, username, password);
				Statement stmt = con.createStatement();) {
			String sql = "update cafe set price = 2000 where product_name = '녹차'";
			int rs = stmt.executeUpdate(sql);
			return rs;
		}
	}

	public int delete() throws Exception {
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String username = "kh";
		String password = "kh";
		try (Connection con = DriverManager.getConnection(url, username, password);
				Statement stmt = con.createStatement();) {
			String sql = "delete from cafe where product_id = 3";

			int rs = stmt.executeUpdate(sql);
			return rs;

		}
	}
	
	// 1개 데이터에 대한 셀렉트
	public String select() throws Exception{
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String username = "kh";
		String password = "kh";
		try(Connection con = DriverManager.getConnection(url,username,password);
				Statement stmt = con.createStatement();){
			String data = null;
			String sql = " select * from cafe where product_id = 1";
			ResultSet rs = stmt.executeQuery(sql);
			if(rs.next()) {
				data = rs.getInt(1)+rs.getString(2) + rs.getInt(3) + rs.getDate(4);
			}
			return data;
		}
	}
	
}
